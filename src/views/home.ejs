  .game-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 20px 40px rgba(168, 85, 247, 0.4);
  }
  
  .scroll-container {
    scroll-snap-type: x mandatory;
    overflow-x: auto;
    overflow-y: hidden;
    padding-bottom: 12px;
    scroll-behavior: smooth;
  }
  
  .scroll-item {
    scroll-snap-align: start;
